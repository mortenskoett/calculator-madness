<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{.Title}}</title>

    <!-- Load templated stylesheets -->
    {{range .IndexParams.StylesheetURL}}
      <link rel="stylesheet" href="{{.}}" />
    {{end}}
  </head>

  <body>
    <div class="navbar">
      <div class="left">
        <img src="{{.IndexParams.FaviconURL}}" alt="Cog icon" width="40">
        <a class="active" href="/">Calculator Status</a>
      </div>

      <div class="center">
        <input id="calcin" type="text" placeholder="Input equation..." onkeypress="enterKeyHandler(event, 'calcbtn')">
        <button id="calcbtn" type="submit" onClick="runCalculation(calcin.value)">Go!</button>
      </div>
    </div>

    <!-- Load templated content -->
    <div class="content">
      {{block "content" .}}{{end}}
    </div>

  </body>

  <script>
  function enterKeyHandler(e, button) {
      e = e || window.event;
      if (e.key == 'Enter') {
          document.getElementById(button).click();
      }
  }

  function runCalculation(msg) {
    alert(msg);
  }

  </script>

</html>

